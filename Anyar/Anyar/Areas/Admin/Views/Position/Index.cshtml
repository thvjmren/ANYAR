@model List<GetPositionVM>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Positions</h4>

            <a asp-action="create" class="btn btn-info">Create</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (GetPositionVM getPositionVM in Model)
                        {
                            <tr>
                                <td>
                                    @getPositionVM.Id
                                </td>
                                <td>
                                    @getPositionVM.Name
                                </td>
                                <td>
                                    <a asp-action="update" asp-route-id="@getPositionVM.Id" class="btn btn-primary">Update</a>
                                    <a asp-action="delete" asp-route-id="@getPositionVM.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>   